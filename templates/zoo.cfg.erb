maxClientCnxns=50
# The number of milliseconds of each tick
tickTime=2000
# The number of ticks that the initial 
# synchronization phase can take
initLimit=10
# The number of ticks that can pass between 
# sending a request and getting an acknowledgement
syncLimit=5
# the directory where the snapshot is stored.
dataDir=<%= scope.lookupvar('zookeeper::datadir') %>
# the port at which the clients will connect
clientPort=2181
<% if scope.lookupvar('zookeeper::autopurge_purge_interval') -%>
autopurge.purgeInterval=<%= scope.lookupvar('zookeeper::autopurge_purge_interval') %>
<% end -%>
<% if scope.lookupvar('zookeeper::autopurge_snap_retain_count') -%>
autopurge.snapRetainCount=<%= scope.lookupvar('zookeeper::autopurge_snap_retain_count') %>
<% end -%>
<% if scope.lookupvar('zookeeper::realm') and not scope.lookupvar('zookeeper::realm').empty? -%>
# security
jaasLoginRenew=3600000
kerberos.removeHostFromPrincipal=true
kerberos.removeRealmFromPrincipal=true
<% end -%>
<% zh = scope.lookupvar('zookeeper::hostnames') -%>
<% i=1 -%>
<% if zh != nil and zh != :undef -%>
<% scope.lookupvar('zookeeper::hostnames').each do |h| -%>
server.<%= i %>=<%= h %>:2888:3888
<% i=i+1 -%>
<% end -%>
<% if scope.lookupvar('zookeeper::realm') and not scope.lookupvar('zookeeper::realm').empty? -%>
<% i=1 -%>
<% scope.lookupvar('zookeeper::hostnames').each do |h| -%>
authProvider.<%= i -%>=org.apache.zookeeper.server.auth.SASLAuthenticationProvider
<% i=i+1 -%>
<% end -%>
<% end -%>
<% end -%>
